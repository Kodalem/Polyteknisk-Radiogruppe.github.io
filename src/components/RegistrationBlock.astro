---
import { fade, slide } from "astro:transitions";
import { db } from "./utils/db";
import { membersTable } from "./models/schema";

// POST request
if (Astro.request.method === 'POST') {
    const data: FormData = await Astro.request.formData();
    const student_id = data.get('student_id');
    const name = data.get('name');
    const university_email = data.get('university_email');
    const personal_email = data.get('personal_email');
    const phone_number = data.get('phone_number');
    const gender = data.get('gender');
    const pronouns = data.get('pronouns');
    // Assume that when the user initially registers, they are not paid member yet
    const is_paid = 0;
    await db.insert(membersTable).values({
        student_id: student_id as string,
        name: name as string,
        university_email: university_email as string,
        personal_email: personal_email as string,
        phone: phone_number as string,
        gender: gender as string,
        pronouns: pronouns as string,
        paid_membership: is_paid as number
    });
}
const cms = await db.query.membersTable.findMany();
---

<!-- Create a registration form with slide transition -->
<div class="my-8 mx-auto max-w-2xl px-4" transition:animate={slide({ duration: '0.3334s' })}>
    <div class="box_background">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">Registration</h1>
        <form class="mt-8 p-8 bg-gray-100 rounded-lg shadow-md" method="post">
            <div class="mb-4">
                <label for="student_id" class="label">Student ID</label>
                <input type="text" id="student_id" name="student_id" class="input" placeholder="Your student ID" />
            </div>

            <div class="mb-4">
                <label for="name" class="label">Name</label>
                <input type="text" id="name" name="name" class="input" placeholder="Your name" />
            </div>

            <div class="mb-4">
                <label for="university_email" class="label">University Email</label>
                <input type="email" id="university_email" name="university_email" class="input" placeholder="Your university email" />
            </div>

            <div class="mb-4">
                <label for="personal_email" class="label">Personal Email</label>
                <input type="email" id="personal_email" name="personal_email" class="input" placeholder="Your personal email" />
            </div>

            <div class="mb-4">
                <label for="phone_number" class="label">Phone Number</label>
                <input type="text" id="phone_number" name="phone_number" class="input" placeholder="Your phone number" />
            </div>

            <div class="mb-4">
                <label for="gender" class="label">Gender</label>
                <input type="text" id="gender" name="gender" class="input" placeholder="Your gender" />
            </div>

            <div class="mb-6">
                <label for="pronouns" class="label">Pronouns</label>
                <input type="text" id="pronouns" name="pronouns" class="input" placeholder="Your pronouns" />
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="button">Submit</button>
            </div>
        </form>
    </div>
</div>

<style>
    .my-8 {
        margin: 4em 0;
    }

    .mt-8 {
        margin-top: 2em;
    }

    .mb-4 {
        margin-bottom: 1em;
    }

    .mb-6 {
        margin-bottom: 1.5em;
    }

    .label {
        display: block;
        color: #333;
        font-size: 1em;
        font-weight: bold;
        margin-bottom: 0.5em;
    }

    .input {
        width: 100%;
        padding: 1.25em;
        margin-top: 0.5em;
        margin-bottom: 1em;
        border: 1px solid #ddd;
        border-radius: 0.25em;
        color: #333;
        background-color: #fff;
        font-size: 1em;
    }

    .button {
        background-color: #007bff;
        color: #fff;
        padding: 0.75em 1.5em;
        border: none;
        border-radius: 0.25em;
        cursor: pointer;
        transition: background-color 0.3s;
        font-size: 1em;
    }

    .button:hover {
        background-color: #0056b3;
    }

    .bg-gray-100 {
        background-color: #f7fafc;
    }

    .rounded-lg {
        border-radius: 0.5em;
    }

    .shadow-md {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .box_background {
        padding: 2em;
        margin: 2em 0;
        border: 2px solid #ccc;
        border-radius: 1em;
        background-color: #f7fafc;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        color: #333;
    }

    /* Dark mode styles */
    html.dark .label {
        color: #ddd;
    }

    html.dark .input {
        background-color: #555;
        border: 1px solid #777;
        color: #ddd;
    }

    html.dark .button {
        background-color: #0056b3;
    }

    html.dark .button:hover {
        background-color: #003f8a;
    }

    html.dark .bg-gray-100 {
        background-color: #333;
    }

    html.dark .box_background {
        background-color: #333;
        border: 2px solid #555;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        color: #ddd;
    }
</style>