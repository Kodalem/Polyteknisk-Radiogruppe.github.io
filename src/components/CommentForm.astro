<form class="mt-8" method="post">
    <div class="mb-4">
        <label for="author" class="label">
            Name
        </label>
        <input
                type="text"
                id="author"
                name="author"
                class="input"
                placeholder="Your name"
        />
    </div>

    <div class="mb-6">
        <label for="content" class="label">
            Comment
        </label>
        <textarea
                id="content"
                name="content"
                class="textarea"
                rows="4"
                placeholder="Your comment"
        ></textarea>
    </div>

    <div class="flex items-center justify-between">
        <button
                type="submit"
                class="button"
        >
            Submit
        </button>
    </div>
</form>

<style>
    .mt-8 {
        margin-top: 2em;
    }

    .mb-4 {
        margin-bottom: 1em;
    }

    .mb-6 {
        margin-bottom: 1.5em;
    }

    .label {
        display: block;
        color: #333;
        font-size: 0.875em;
        font-weight: bold;
        margin-bottom: 0.5em;
    }

    .input,
    .textarea {
        width: 100%;
        padding: 0.75em;
        margin-top: 0.5em;
        margin-bottom: 1em;
        border: 1px solid #ddd;
        border-radius: 0.25em;
        color: #333;
        background-color: #fff;
    }

    .button {
        background-color: #007bff;
        color: #fff;
        padding: 0.75em 1.5em;
        border: none;
        border-radius: 0.25em;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .button:hover {
        background-color: #0056b3;
    }

    /* Dark mode styles */
    html.dark .label {
        color: #ddd;
    }

    html.dark .input,
    html.dark .textarea {
        background-color: #555;
        border: 1px solid #777;
        color: #ddd;
    }

    html.dark .button {
        background-color: #0056b3;
    }

    html.dark .button:hover {
        background-color: #003f8a;
    }
</style>